<%= form_with(model: contact, local: true, class: "xs-form") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-4">
      <%= form.text_field :name, class: "form-control", placeholder: "Your name", id: "xs_contact_name" %>
    </div>
    <div class="col-lg-4">
      <%= form.text_field :email, class: "form-control", placeholder: "Your email", id: "xs_contact_email" %>
    </div>
    <div class="col-lg-4">
      <%= form.text_field :number, class: "form-control", placeholder: "Your contact number", id: "xs_contact_phone" %>
    </div>
    <div class="col-lg-12">
      <%= form.text_area :message, placeholder: "Message", id: "x_contact_massage", class: "form-control message-box", rows: "10" %>
    </div>
  </div>
  <div class="xs-btn-wraper">
    <%= recaptcha_v3(action: 'new') %>
    <%= form.submit 'SEND MESSAGE', class: "xs-btn", id: "xs_contact_submit" %>
  </div>
<% end %>