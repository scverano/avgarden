<!--breadcumb start here-->
<section class="banner-inner-sec" style="background-image:url(<%= cloudinary_url 'avgarden/banner-6.jpg' %>)">
  <div class="banner-table">
    <div class="banner-table-cell">
      <div class="container">
        <div class="banner-inner-content">
          <h2 class="banner-inner-title"><%= t('.forgot_your_password') %></h2>
        </div>
      </div>
    </div>
  </div>
</section>
<!--breadcumb end here-->

<div class="row mt-5 pt-5 mb-5 pb-5">
  <div class="col-md-4 offset-md-4">
		<h3 class="text-success"><%= t('.forgot_your_password') %></h3>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= bootstrap_devise_error_messages! %>

		  <div class="form-group">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
		  </div>

		  <div class="form-group">
		    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-success' %>
		  </div>
		<% end %>

		<%= render 'devise/shared/links' %>
  </div>
</div>